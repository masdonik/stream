# Application Configuration
SECRET_KEY=change-this-to-a-secure-secret-key
DEBUG=False

# Google Drive API Configuration
GOOGLE_DRIVE_API_KEY=your-google-drive-api-key-here

# Streaming URLs
FACEBOOK_STREAM_URL=rtmps://live-api-s.facebook.com:443/rtmp/your-stream-key
YOUTUBE_STREAM_URL=rtmp://a.rtmp.youtube.com/live2/your-stream-key

# Database Configuration
SQLALCHEMY_DATABASE_URI=sqlite:///database.db

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Upload Limits (in bytes)
MAX_CONTENT_LENGTH=16777216  # 16MB

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/opt/streaming-manager/logs/app.log

# FFmpeg Configuration
FFMPEG_LOG_LEVEL=warning    # debug, info, warning, error, fatal
FFMPEG_THREAD_QUEUE_SIZE=512